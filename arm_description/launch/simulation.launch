<launch>

    <!-- Launch arguments -->
    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="false" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="false" />

    <include file="(find gazebo_ros/launch/empty_world.launch)" >
        <arg name="paused" default="$(arg paused)" />
        <arg name="use_sim_time" default="$(arg use_sim_time)" />
        <arg name="gui" default="$(arg gui)" />
        <arg name="headless" default="$(arg headless)" />
        <arg name="debug" default="$(arg debug)" />
    </include>

    <param name="arm_description" command="cat $(find arm_description)/urdf/arm_description.urdf" />

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="False" output="screen" args="-urdf -param arm_description -model arm_model" />

    <!-- Controllers -->
    <include file="$(find arm_description)/launch/controller.launch" />

</launch>